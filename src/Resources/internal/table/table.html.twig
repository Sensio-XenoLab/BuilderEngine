<div class="vbe-table-container">
    <table class="vbe-table">
        <thead>
            <tr>
                {% for tab in head %}
                    {% if tab.column|vbe_is_sortable %}
                        <th class="vbe-table-heading{% if data.isSorted(tab.column) %} sorted{% else %} unsorted{% endif %}">
                            {{ knp_pagination_sortable(data, tab.label, tab.column) }}
                        </th>
                    {% else %}
                        <th class="vbe-table-heading">{{ tab.label }}</th>
                    {% endif %}
                {% endfor %}
                <th class="vbe-table-heading">{{ 'vbe.tab.actions'|trans({}, 'BuilderEngineBundle-table') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
                <tr class="vbe-table-row">
                    {% for cell in row.cells %}
                        <td class="vbe-table-cell">{{ cell|vbe_value_mutator }}</td>
                    {% endfor %}
                    <td class="vbe-table-cell">
                        <div class="vbe-actions-wrapper">
                            {% for action in row.actions %}
                                <a href="{{ action.url }}" class="vbe-action-btn {{ action.class }}"{% if action.onclick is not null %} onclick="{{ action.onclick }}"{% endif %}>
                                    {{ action.label|trans({}, 'BuilderEngineBundle-table') }}
                                </a>
                            {% endfor %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr class="vbe-table-row">
                    <td colspan="{{ head|length + 1 }}" class="vbe-table-row vbe-table-empty">
                        {{ 'vbe.content.empty'|trans({}, 'BuilderEngineBundle-table') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
